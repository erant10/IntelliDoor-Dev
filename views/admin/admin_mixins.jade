mixin newHomeModal()
    // Modal
    #newHomeModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='homeModalTitle', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#homeModalTitle.modal-title Add A new Home
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                .modal-body
                    .form-group
                        label(for='guestFirstName') Home Number
                        input#guestFirstName.form-control(type='number', placeholder='Example: 4')
                    .form-group
                        label(for='guestLastName') Description
                        input#guestLastName.form-control(type='text', placeholder='Example: The Stark Family')


                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Create Guest

