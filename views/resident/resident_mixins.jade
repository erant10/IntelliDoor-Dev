mixin guestModal()
    // Modal
    #newGuestModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='guestModalTitle', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#guestModalTitle.modal-title Add A new Guest
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                .modal-body
                    .form-group
                        label(for='guestFirstName') First Name
                        input#guestFirstName.form-control(type='text', placeholder='Example: John')
                    .form-group
                        label(for='guestLastName') Last Name
                        input#guestLastName.form-control(type='text', placeholder='Example: Snow')
                    .form-group
                        label(for='guestPhone') Phone Number
                        input#guestPhone.form-control(type='tel', placeholder='Example: +972521234567')
                    .form-group
                        label(for='guestDescription') Description
                        input#guestDescription.form-control(type='text', placeholder='Example: My best Friend')


                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close
                    button.btn.btn-primary(type='button') Create Guest

